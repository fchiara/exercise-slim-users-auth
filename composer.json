{
    "require": {
        "php": "7.0.18",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "^2.5",
        "stof/doctrine-extensions-bundle": "^1.2",
        "robmorgan/phinx": "^0.9.1",
        "firebase/php-jwt": "^5.0",
        "tuupola/base62": "^0.9.0",
        "tuupola/slim-basic-auth": "^2.3",
        "tuupola/slim-jwt-auth": "^2.3",
        "tuupola/cors-middleware": "^0.5.2",
        "gofabian/negotiation-middleware": "^0.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload" : {
        "psr-4": {
            "App\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
